<resources xmlns:tools = "http://schemas.android.com/tools">

	<!-- Base application theme. -->
	<style name = "AppTheme" parent = "Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name = "colorPrimary">@color/colorPrimary</item>
		<item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name = "colorAccent">@color/colorAccent</item>
		<item name = "android:windowLightStatusBar" tools:targetApi = "23">true</item>
	</style>

	<!--Theme for Toolbars across the whole app-->
	<style name = "ToolbarTheme" parent = "ThemeOverlay.AppCompat.Light">
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:elevation" tools:targetApi = "21">
			@dimen/toolbar_elevation
		</item>
		<item name = "theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
		<item name = "android:background">@color/colorPrimary</item>
		<item name = "titleTextColor">@color/colorToolbarTitle</item>
	</style>

	<style name = "ProgressBarTheme">
		<item name = "android:layout_width">@dimen/progressbar_circle_diameter</item>
		<item name = "android:layout_height">0dp</item>
	</style>

	<style name = "ProgressBarTheme.LinearLayout">
		<item name = "android:layout_gravity">center</item>
		<item name = "android:layout_weight">1</item>
	</style>

	<style name = "EditorHeaderText">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:layout_marginStart">@dimen/activity_margin</item>
		<item name = "android:textStyle">bold</item>
	</style>

	<style name = "EditorTextInputLayout">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:layout_marginStart">@dimen/activity_margin</item>
		<item name = "android:layout_marginEnd">@dimen/activity_margin</item>
	</style>

	<style name = "EditorTextInputEditText">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:ellipsize">end</item>
		<item name = "android:lines">1</item>
		<item name = "android:maxLines">1</item>
	</style>

	<style name = "EditorCounterButton">
		<item name = "android:layout_width">@dimen/editor_button_width</item>
		<item name = "android:layout_height">@dimen/editor_button_height</item>
		<item name = "android:elevation" tools:targetApi = "21">@dimen/editor_button_elevation
		</item>
		<item name = "android:gravity">center</item>
		<item name = "android:backgroundTint" tools:targetApi = "21">@color/colorPrimary</item>
	</style>

	<style name = "DetailValuesList">
		<item name = "android:layout_width">wrap_content</item>
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:layout_marginBottom">@dimen/detail_total_values_line_spacing</item>
	</style>

	<style name = "DetailValuesList.Unit">
		<item name = "android:textSize">12sp</item>
	</style>

</resources>
